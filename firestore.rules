rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 開発（フェーズ3）: rooms は認証ユーザーに読み取り許可。書き込みは原則不可。
    match /rooms/{roomId} {
      allow read: if request.auth != null;
      // フェーズ4以降: クライアント直書きは全面禁止（Functions/Admin SDKのみが書込）
      allow create, update, delete: if false;
    }

    // その他は原則読み取りのみ許可（必要に応じて個別で強化）
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
